    </screenshot>
    <screenshot>
      <image>https://okcode.studio/assets/img/screenshots/oav/desktop-alerts-filter.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="1.1.8" date="2025-01-25">
      <description>
          <p>Setting up builds of Linux bundles, to be used for making Flatpaks</p>
      </description>
    </release>
  </releases>

</component>
